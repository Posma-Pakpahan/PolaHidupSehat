# Environment Variables untuk Pola Hidup Tracker
# Copy file ini ke .env dan isi dengan nilai yang sesuai

# Debug mode (True untuk development, False untuk production)
DEBUG=True

# Secret key untuk Django (generate dengan: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())')
SECRET_KEY=your-secret-key-here

# Database configuration
DB_NAME=pola_hidup_tracker
DB_USER=tracker_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# HTTPS settings (True untuk production)
USE_HTTPS=False

# Email configuration (untuk production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@posma-pakpahan.me

# Redis configuration (untuk caching di production)
REDIS_URL=redis://127.0.0.1:6379/1

# Domain allowed hosts (pisahkan dengan koma)
ALLOWED_HOSTS=localhost,127.0.0.1,tracker.posma-pakpahan.me,31.97.221.115